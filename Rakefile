# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.plugin :minitest
Hoe.plugin :git

Hoe.spec 'rdoc-browser' do
  developer 'Eric Hodel', 'drbrain@segment7.net'

  rdoc_locations <<
  'docs.seattlerb.org:/data/www/docs.seattlerb.org/rdoc-browser/'

  self.readme_file = 'README.rdoc'
end

